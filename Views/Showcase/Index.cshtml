@model osb.ViewModels.ShowcaseViewModel
@{
    ViewData["Title"] = "Storyboards";
}
<link rel="stylesheet" href="/static/base/sb.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-mfizz/2.3.0/font-mfizz.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.0.0/ekko-lightbox.css">

<header class="opening-banner-sb">
    <h1 class="display opening-header">Storyboard Showcase</h1>
    <div class="bae-sb"></div>
</header>

<h1 class="special-banner-sub-2 top-header">Search</h1>

<form action="/showcase/search" method="get">
    <div class="form-group form-row" style="margin:2em 0 1em">
        <input class="form-control form-control-lg" placeholder="type in keywords..." id="storyboard_search" type="text" name="s" value="">
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input form-control-lg" type="checkbox" name="f" placeholder="off">
        <label class="form-check-label">Featured Storyboard</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input form-control-lg" type="checkbox" name="c" placeholder="off">
        <label class="form-check-label">Classic Storyboard</label>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Search!">
    </div>
</form>

